#:kivy 1.11.0
#: import main main


BitcoinWidget:
	container_home: container_home
    padding: 20
    spacing: 20

    # -content ---
    BoxLayout:
        id: container_home
        orientation: 'vertical'
        size_hint: None, None
        padding: 0, 20
        spacing: 20
        width: 400

        Label:
            text: 'Создание биткоин кошелька'
            font_size: 30

    BoxLayout:

        Label:
            text: "Вставьте новый или выберите накопитель куда сохранить файл кошелька"

        GridLayout:
            cols: 2
            size_hint: 1, None
            height: 30
            CheckBox:
                group: 'ip_address'
                active: True
            Label:
                text: 'F: [Flash Disk]'
        GridLayout:
            cols: 2
            size_hint: 1, None
            height: 30
            CheckBox:
                group: 'ip_address'
            Label:
                text: 'V: [SD Card Name]'


            Label:
                text: "Введите имя кошелька"
            TextInput:
                id: name_purse

            Label:
                text: "Придумайти пароль для нового кошелька"
            TextInput:
                id: password_purse


    # -footer btn ---
    BoxLayout:
        size_hint: None, None
        height: 40
        spacing: 20
        width: 400

        Button:
            text: 'Назад'
            size_hint_x: 15
            on_release: app.next_screen('home')
        Button:
            id: id_more_btn
            text: 'Далее'
            disabled: True
            size_hint_x: 15
            on_press: root.save_node()
            on_release: app.next_screen('bitcoin_purse/created')




